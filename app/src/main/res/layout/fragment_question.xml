<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <carbon.widget.Toolbar
        android:id="@+id/question_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/question_swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <carbon.widget.RecyclerView
            android:id="@+id/question_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="?attr/carbon_dividerColor"
            android:dividerHeight="@dimen/carbon_dividerHeight"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</carbon.widget.LinearLayout>