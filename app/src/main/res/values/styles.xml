<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="carbon_Theme.Light.DarkPrimaryColor.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="tagViewStyle">@style/TagView</item>
    </style>

    <style name="SplashTheme" parent="carbon_Theme.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_logo</item>
    </style>

    <style name="TextAppearance.Title" parent="carbon_TextAppearance.Subhead"/>

    <style name="TextAppearance.Answers" parent="carbon_TextAppearance.Subhead">
        <item name="android:textColor">@drawable/selector_answers_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Score" parent="carbon_TextAppearance.Subhead">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Body" parent="carbon_TextAppearance.Body1"/>

    <style name="TextAppearance.Caption" parent="carbon_TextAppearance.Caption"/>

    <style name="TagView" parent="carbon_TextView">
        <item name="carbon_cornerRadius">2dp</item>
        <item name="android:textColor">@color/tagText</item>
        <item name="android:background">@color/tagBackground</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="Avatar" parent="carbon_ImageView.Avatar">
        <item name="carbon_cornerRadius">2dp</item>
    </style>

</resources>
